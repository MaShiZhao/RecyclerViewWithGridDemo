<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.Toolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/first_theme</item>
        <item name="colorPrimaryDark">@color/first_theme</item>
        <item name="colorAccent">@color/first_theme</item>
        <item name="android:listDivider">@drawable/divider</item>
    </style>


    //toolbar标题文字大小样式
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/woying_16_dip</item>
    </style>



    <style name="Toolbar" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/first_theme</item>
        <item name="colorPrimaryDark">@color/first_theme</item>
        <item name="colorAccent">@color/first_theme</item>
    </style>


</resources>

