<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/activity_information_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.recyclerview.gridview.test.base.MainActivity">



    <com.recyclerview.gridview.test.base.recyclerview.MyPullSwipeRefresh
        android:id="@+id/myPullSwipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         android:visibility="visible">

        <com.recyclerview.gridview.test.base.recyclerview.MyRecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:layoutManagerType="grid_layout"
            app:spanCount="2"
            >

        </com.recyclerview.gridview.test.base.recyclerview.MyRecyclerView>

    </com.recyclerview.gridview.test.base.recyclerview.MyPullSwipeRefresh>

</RelativeLayout>
